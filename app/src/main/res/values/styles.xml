<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Title theme -->
    <style name="DashchanMonet.Title" parent="@style/Widget.Material3.CollapsingToolbar.Large">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Card theme -->
    <style name="DashchanMonet.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <!-- Icon Card theme -->
    <style name="DashchanMonet.IconCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_card_background</item>
        <item name="android:tint">?colorOnPrimaryContainer</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTint">?colorPrimaryContainer</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <!-- Button theme -->
    <style name="DashchanMonet.Button" parent="@style/Widget.Material3.Button">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>